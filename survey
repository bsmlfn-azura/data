    <script>
        // --- 1. State Management & Inisialisasi ---
        const STORAGE_KEY = 'hr_survey_data_v1';
        let surveyData = [];

        function init() {
            // Cek LocalStorage
            const storedData = localStorage.getItem(STORAGE_KEY);
            if (storedData) {
                surveyData = JSON.parse(storedData);
            } else {
                // Seed data dummy jika kosong (untuk demo)
                surveyData = [
                    { id: 1, date: '2023-10-01 09:00', nama: 'Sapi', OPD: 'BPBD', q_kecepatan: 4, q_sikap: 5, q_informasi: 4, saran: 'Layanan sangat baik.' },
                    { id: 2, date: '2023-10-02 14:30', nama: 'Anonim', OPD: 'BKPSDM', q_kecepatan: 3, q_sikap: 3, q_informasi: 2, saran: 'Proses klaim agak lambat.' }
                ];
                saveData();
            }
            updateDashboard();
        }

        function saveData() {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(surveyData));
            updateDashboard();
        }

        // --- 2. Navigasi Tab ---
        function switchTab(tabName) {
            // Update Button Styles
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            const activeBtnIndex = tabName === 'survey' ? 0 : 1;
            document.querySelectorAll('.tab-btn')[activeBtnIndex].classList.add('active');

            // Update View Visibility
            document.querySelectorAll('.view-section').forEach(section => section.classList.remove('active'));
            document.getElementById(`${tabName}-view`).classList.add('active');

            // Jika pindah ke dashboard, refresh data
            if (tabName === 'dashboard') {
                updateDashboard();
            }
        }

        // --- 3. Form Handling ---
        function handleSurveySubmit(e) {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);

            // Validasi sederhana sudah ditangani HTML 'required', 
            // tapi kita tambahkan validasi logika jika perlu.

            const newEntry = {
                id: Date.now(),
                date: new Date().toLocaleString('id-ID', { dateStyle: 'short', timeStyle: 'short' }),
                nama: formData.get('nama') || 'Anonim',
                divisi: formData.get('divisi'),
                q_kecepatan: parseInt(formData.get('q_kecepatan')),
                q_sikap: parseInt(formData.get('q_sikap')),
                q_informasi: parseInt(formData.get('q_informasi')),
                saran: formData.get('saran') || '-'
            };

            // Simpan ke array dan storage
            surveyData.push(newEntry);
            saveData();

            // Reset Form & Notifikasi
            form.reset();
            showToast('Mator Sakalangkong! Survey Anda berhasil dikirim.', 'success');
        }

        // --- 4. Dashboard Logic ---
        function updateDashboard() {
            const tbody = document.getElementById('tableBody');
            const emptyState = document.getElementById('emptyState');
            const dataTable = document.getElementById('dataTable');

            // Reset Tabel
            tbody.innerHTML = '';

            if (surveyData.length === 0) {
                dataTable.style.display = 'none';
                emptyState.style.display = 'block';
                resetStats();
                return;
            }

            dataTable.style.display = 'table';
            emptyState.style.display = 'none';

            // Render Rows (Urutkan dari yang terbaru)
            const sortedData = [...surveyData].sort((a, b) => b.id - a.id);

            sortedData.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${item.date}</td>
                    <td>${escapeHtml(item.nama)}</td>
                    <td>${escapeHtml(item.divisi)}</td>
                    <td><span style="color:${getColorRating(item.q_kecepatan)}; font-weight:bold;">${item.q_kecepatan}/5</span></td>
                    <td><span style="color:${getColorRating(item.q_sikap)}; font-weight:bold;">${item.q_sikap}/5</span></td>
                    <td><span style="color:${getColorRating(item.q_informasi)}; font-weight:bold;">${item.q_informasi}/5</span></td>
                    <td style="max-width: 200px; white-space: pre-wrap; font-size: 0.9em;">${escapeHtml(item.saran)}</td>
                `;
                tbody.appendChild(row);
            });

            // Hitung Statistik
            calculateStats();
        }

        function calculateStats() {
            const total = surveyData.length;
            const sumKecepatan = surveyData.reduce((acc, curr) => acc + curr.q_kecepatan, 0);
            const sumSikap = surveyData.reduce((acc, curr) => acc + curr.q_sikap, 0);
            const sumInformasi = surveyData.reduce((acc, curr) => acc + curr.q_informasi, 0);

            document.getElementById('totalResponses').innerText = total;
            document.getElementById('avgKecepatan').innerText = (sumKecepatan / total).toFixed(1);
            document.getElementById('avgSikap').innerText = (sumSikap / total).toFixed(1);
            document.getElementById('avgInformasi').innerText = (sumInformasi / total).toFixed(1);
        }

        function resetStats() {
            document.getElementById('totalResponses').innerText = '0';
            document.getElementById('avgKecepatan').innerText = '0.0';
            document.getElementById('avgSikap').innerText = '0.0';
            document.getElementById('avgInformasi').innerText = '0.0';
        }

        function getColorRating(value) {
            if (value <= 2) return '#ef4444'; // Merah
            if (value === 3) return '#f59e0b'; // Kuning
            return '#10b981'; // Hijau
        }

        // Mencegah XSS sederhana
        function escapeHtml(text) {
            if (!text) return '';
            return text
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        // --- 5. Export CSV Feature ---
        function exportToCSV() {
            if (surveyData.length === 0) {
                showToast('Tidak ada data untuk diexport.', 'error');
                return;
            }

            // Header CSV
            let csvContent = "data:text/csv;charset=utf-8,";
            csvContent += "ID,Tanggal,Nama,OPD,Kecepatan,Sikap,Kualitas Informasi,Saran\n";

            // Isi CSV
            surveyData.forEach(row => {
                // Handle koma dan newline di dalam teks saran agar format CSV tidak rusak
                const cleanSaran = row.saran.replace(/(\r\n|\n|\r)/gm, " ");
                const rowString = [
                    row.id,
                    row.date,
                    `"${row.nama}"`, // Quote string for safety
                    `"${row.divisi}"`,
                    row.q_kecepatan,
                    row.q_sikap,
                    row.q_informasi,
                    `"${cleanSaran}"`
                ].join(",");
                csvContent += rowString + "\n";
            });

            // Trigger Download
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", `hasil_survey_kepegawaian_${new Date().toISOString().slice(0,10)}.csv`);
            document.body.appendChild(link); // Required for FF
            link.click();
            document.body.removeChild(link);

            showToast('File CSV berhasil diunduh!', 'success');
        }

        function clearData() {
            if(confirm("Apakah Anda yakin ingin menghapus semua data survey? Tindakan ini tidak dapat dibatalkan.")) {
                surveyData = [];
                saveData();
                showToast('Semua data berhasil dihapus.', 'success');
            }
        }

        // --- 6. Toast Notification System ---
        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            
            const iconClass = type === 'success' ? 'fa-circle-check' : 'fa-circle-exclamation';
            
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <i class="fa-solid ${iconClass}"></i>
                <span>${message}</span>
            `;

            container.appendChild(toast);

            // Remove after 3 seconds
            setTimeout(() => {
                toast.style.animation = 'fadeOut 0.3s ease-in forwards';
                toast.addEventListener('animationend', () => {
                    toast.remove();
                });
            }, 3000);
        }

        // Jalankan saat halaman dimuat
        window.addEventListener('DOMContentLoaded', init);

    </script>
</body>
</html>
