import React, { useState, useEffect, useRef } from 'react';
import { 
  LayoutDashboard, 
  PlusCircle, 
  FileText, 
  Printer, 
  Trash2, 
  Search, 
  Wallet, 
  X,
  Settings,
  Edit2,
  Check,
  Plus,
  Calendar,
  Upload,
  Hash,
  Image as ImageIcon,
  Key,
  User,
  Users,
  ChevronLeft
} from 'lucide-react';

// --- Helper: Terbilang (Angka ke Teks) ---
function terbilang(angka) {
  const bil = ["", "Satu", "Dua", "Tiga", "Empat", "Lima", "Enam", "Tujuh", "Delapan", "Sembilan", "Sepuluh", "Sebelas"];
  let temp = "";
  
  if (angka < 12) {
    temp = " " + bil[angka];
  } else if (angka < 20) {
    temp = terbilang(angka - 10) + " Belas";
  } else if (angka < 100) {
    temp = terbilang(Math.floor(angka / 10)) + " Puluh" + terbilang(angka % 10);
  } else if (angka < 200) {
    temp = " Seratus" + terbilang(angka - 100);
  } else if (angka < 1000) {
    temp = terbilang(Math.floor(angka / 100)) + " Ratus" + terbilang(angka % 100);
  } else if (angka < 2000) {
    temp = " Seribu" + terbilang(angka - 1000);
  } else if (angka < 1000000) {
    temp = terbilang(Math.floor(angka / 1000)) + " Ribu" + terbilang(angka % 1000);
  } else if (angka < 1000000000) {
    temp = terbilang(Math.floor(angka / 1000000)) + " Juta" + terbilang(angka % 1000000);
  }
  return temp;
}

const MONTHS = [
  "Januari", "Februari", "Maret", "April", "Mei", "Juni",
  "Juli", "Agustus", "September", "Oktober", "November", "Desember"
];

// --- Komponen Utama ---
export default function App() {
  const [activeTab, setActiveTab] = useState('dashboard');
  const [transactions, setTransactions] = useState([]);
  const [opds, setOpds] = useState(['Dinas Pendidikan', 'Dinas Kesehatan', 'Dinas Sosial', 'Sekretariat Daerah']);
  const [recipients, setRecipients] = useState(['Bendahara Utama']);
  const [customLogo, setCustomLogo] = useState(null);
  const [receiptPrefix, setReceiptPrefix] = useState('KPR');
  const [showReceipt, setShowReceipt] = useState(null);

  useEffect(() => {
    const savedData = localStorage.getItem('korpri_transactions');
    const savedOpds = localStorage.getItem('korpri_opds');
    const savedRecipients = localStorage.getItem('korpri_recipients');
    const savedLogo = localStorage.getItem('korpri_logo');
    const savedPrefix = localStorage.getItem('korpri_prefix');
    
    if (savedData) setTransactions(JSON.parse(savedData));
    if (savedOpds) setOpds(JSON.parse(savedOpds));
    if (savedRecipients) setRecipients(JSON.parse(savedRecipients));
    if (savedLogo) setCustomLogo(savedLogo);
    if (savedPrefix) setReceiptPrefix(savedPrefix);
  }, []);

  useEffect(() => {
    localStorage.setItem('korpri_transactions', JSON.stringify(transactions));
    localStorage.setItem('korpri_opds', JSON.stringify(opds));
    localStorage.setItem('korpri_recipients', JSON.stringify(recipients));
    localStorage.setItem('korpri_prefix', receiptPrefix);
    if (customLogo) localStorage.setItem('korpri_logo', customLogo);
    else localStorage.removeItem('korpri_logo');
  }, [transactions, opds, recipients, receiptPrefix, customLogo]);

  const addTransaction = (data) => {
    const newTransaction = {
      id: Date.now().toString(),
      date: new Date().toISOString(),
      ...data
    };
    setTransactions([newTransaction, ...transactions]);
    setShowReceipt(newTransaction);
  };

  const deleteTransaction = (id) => {
    if (window.confirm('Yakin ingin menghapus data ini?')) {
      setTransactions(transactions.filter(t => t.id !== id));
    }
  };

  return (
    <div className="min-h-screen bg-slate-50 font-sans text-slate-800 flex flex-col md:flex-row">
      <nav className="bg-slate-900 text-white w-full md:w-64 flex-shrink-0 print:hidden">
        <div className="p-6 border-b border-slate-700">
          <h1 className="text-xl font-bold flex items-center gap-2">
            <Wallet className="text-blue-400" />
            CatatanKorpri
          </h1>
          {/* PERUBAHAN: Koperasi menjadi Iuran */}
          <p className="text-xs text-slate-400 mt-1 uppercase tracking-widest font-bold">Iuran Pegawai</p>
        </div>
        <div className="p-4 space-y-2">
          <NavButton active={activeTab === 'dashboard'} onClick={() => setActiveTab('dashboard')} icon={<LayoutDashboard size={20} />} label="Dasbor" />
          <NavButton active={activeTab === 'entry'} onClick={() => setActiveTab('entry')} icon={<PlusCircle size={20} />} label="Input Iuran" />
          <NavButton active={activeTab === 'history'} onClick={() => setActiveTab('history')} icon={<FileText size={20} />} label="Laporan" />
          <NavButton active={activeTab === 'settings'} onClick={() => setActiveTab('settings')} icon={<Settings size={20} />} label="Pengaturan" />
        </div>
      </nav>

      <main className="flex-1 overflow-y-auto p-4 md:p-8 print:p-0">
        {activeTab === 'dashboard' && <Dashboard transactions={transactions} />}
        {activeTab === 'entry' && <EntryForm onSubmit={addTransaction} opds={opds} recipients={recipients} transactions={transactions} prefix={receiptPrefix} />}
        {activeTab === 'history' && <HistoryView transactions={transactions} onDelete={deleteTransaction} onPrint={(t) => setShowReceipt(t)} />}
        {activeTab === 'settings' && <SettingsPage opds={opds} setOpds={setOpds} recipients={recipients} setRecipients={setRecipients} logo={customLogo} setLogo={setCustomLogo} prefix={receiptPrefix} setPrefix={setReceiptPrefix} />}
      </main>

      {showReceipt && <ReceiptModal data={showReceipt} logo={customLogo} onClose={() => setShowReceipt(null)} />}
    </div>
  );
}

// --- Komponen: Dasbor ---
function Dashboard({ transactions }) {
  const currentMonth = new Date().getMonth();
  const currentYear = new Date().getFullYear();

  const thisMonthTransactions = transactions.filter(t => {
    const d = new Date(t.date);
    return d.getMonth() === currentMonth && d.getFullYear() === currentYear;
  });

  const totalIncome = thisMonthTransactions.reduce((sum, t) => sum + Number(t.amount), 0);
  const transactionCount = thisMonthTransactions.length;

  return (
    <div className="max-w-4xl mx-auto space-y-6">
      <header className="mb-8">
        {/* PERUBAHAN: Ringkasan Korpri menjadi Ringkasan Iuran Korpri */}
        <h2 className="text-3xl font-black text-slate-800 tracking-tight">Ringkasan Iuran Korpri</h2>
        <p className="text-slate-500 font-medium">{new Date().toLocaleDateString('id-ID', { month: 'long', year: 'numeric' })}</p>
      </header>
      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div className="bg-gradient-to-br from-blue-700 to-indigo-800 text-white rounded-3xl p-8 shadow-xl relative overflow-hidden">
            <div className="absolute top-0 right-0 p-4 opacity-10"><Wallet size={120} /></div>
            <p className="text-blue-100 font-bold mb-2 uppercase tracking-widest text-xs">Pemasukan Iuran Bulan Ini</p>
            <h3 className="text-4xl font-black">{formatRupiah(totalIncome)}</h3>
        </div>
        <div className="bg-white rounded-3xl p-8 shadow-sm border border-slate-100 flex flex-col justify-center">
          <p className="text-slate-400 font-bold mb-2 uppercase tracking-widest text-xs">Total Transaksi</p>
          <h3 className="text-4xl font-black text-slate-800">{transactionCount}</h3>
        </div>
      </div>
    </div>
  );
}

// --- Komponen: Input Transaksi ---
function EntryForm({ onSubmit, opds, recipients, transactions, prefix }) {
  const now = new Date();
  
  const generateReceiptNo = () => {
    const dateStr = now.getFullYear().toString() + 
                    (now.getMonth() + 1).toString().padStart(2, '0') + 
                    now.getDate().toString().padStart(2, '0');
    
    const currentPrefix = `${prefix}-${dateStr}-`;
    const todayTransactions = transactions.filter(t => t.receiptNo && t.receiptNo.startsWith(currentPrefix));
    
    let nextNum = 1;
    if (todayTransactions.length > 0) {
      const lastNo = todayTransactions[0].receiptNo;
      const parts = lastNo.split('-');
      const lastSeq = parseInt(parts[parts.length - 1]);
      nextNum = isNaN(lastSeq) ? 1 : lastSeq + 1;
    }
    
    return currentPrefix + nextNum.toString().padStart(3, '0');
  };

  const [formData, setFormData] = useState({
    receiptNo: generateReceiptNo(),
    payerName: '',
    amount: '',
    opd: opds[0] || '',
    recipient: recipients[0] || '',
    periodMonth: MONTHS[now.getMonth()],
    periodYear: now.getFullYear().toString(),
    method: 'Tunai',
    note: ''
  });

  useEffect(() => {
    setFormData(prev => ({ 
        ...prev, 
        receiptNo: generateReceiptNo(),
        opd: prev.opd || opds[0],
        recipient: prev.recipient || recipients[0]
    }));
  }, [prefix, opds, recipients]);

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!formData.payerName || !formData.amount) return;
    onSubmit({ ...formData, amount: Number(formData.amount) });
    setFormData({ ...formData, payerName: '', amount: '', note: '' });
    setTimeout(() => setFormData(prev => ({...prev, receiptNo: generateReceiptNo()})), 100);
  };

  return (
    <div className="max-w-2xl mx-auto">
      <h2 className="text-2xl font-black mb-6 text-slate-800 tracking-tight">Input Pembayaran Iuran</h2>
      <form onSubmit={handleSubmit} className="bg-white rounded-3xl shadow-sm border border-slate-200 p-8 space-y-6">
        
        <div className="bg-slate-50 p-5 rounded-2xl border border-slate-200 flex items-center justify-between">
          <div className="flex items-center gap-2 text-slate-600 font-bold">
            <Hash size={18} /> <span className="text-xs uppercase">No. Bukti</span>
          </div>
          <span className="text-xl font-mono font-black text-blue-700">{formData.receiptNo}</span>
        </div>

        <div>
            <label className="block text-xs font-bold text-slate-500 uppercase tracking-widest mb-2">Nama Penyetor (Anggota)</label>
            <input 
                type="text" required
                placeholder="Nama lengkap anggota..."
                className="w-full px-5 py-3.5 rounded-2xl border-2 border-slate-100 focus:border-blue-500 outline-none transition-all font-semibold"
                value={formData.payerName}
                onChange={e => setFormData({...formData, payerName: e.target.value})}
            />
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label className="block text-xs font-bold text-slate-500 uppercase tracking-widest mb-2">Nominal Iuran (Rp)</label>
                <input 
                    type="number" required
                    className="w-full px-5 py-3.5 rounded-2xl border-2 border-slate-100 focus:border-blue-500 outline-none transition-all font-bold text-lg"
                    value={formData.amount}
                    onChange={e => setFormData({...formData, amount: e.target.value})}
                />
            </div>
            <div>
                <label className="block text-xs font-bold text-slate-500 uppercase tracking-widest mb-2">Unit Kerja / OPD</label>
                <select 
                    className="w-full px-5 py-3.5 rounded-2xl border-2 border-slate-100 focus:border-blue-500 outline-none transition-all font-semibold appearance-none bg-white"
                    value={formData.opd}
                    onChange={e => setFormData({...formData, opd: e.target.value})}
                >
                    {opds.map((o, idx) => <option key={idx} value={o}>{o}</option>)}
                </select>
            </div>
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-6 items-end">
            <div>
                <label className="block text-xs font-bold text-slate-500 uppercase tracking-widest mb-2">Petugas Penerima</label>
                <select 
                    className="w-full px-5 py-3.5 rounded-2xl border-2 border-slate-100 focus:border-blue-500 outline-none transition-all font-semibold bg-white"
                    value={formData.recipient}
                    onChange={e => setFormData({...formData, recipient: e.target.value})}
                >
                    {recipients.map((r, idx) => <option key={idx} value={r}>{r}</option>)}
                </select>
            </div>
            <div className="bg-blue-50 p-4 rounded-2xl flex gap-3">
                <select 
                    className="flex-1 px-3 py-2 rounded-xl border border-blue-100 outline-none font-bold text-sm"
                    value={formData.periodMonth}
                    onChange={e => setFormData({...formData, periodMonth: e.target.value})}
                >
                    {MONTHS.map(m => <option key={m} value={m}>{m}</option>)}
                </select>
                <input 
                    type="number"
                    className="w-20 px-3 py-2 rounded-xl border border-blue-100 outline-none font-bold text-sm"
                    value={formData.periodYear}
                    onChange={e => setFormData({...formData, periodYear: e.target.value})}
                />
            </div>
        </div>

        <button type="submit" className="w-full bg-blue-600 text-white font-black py-4 rounded-2xl hover:bg-blue-700 transition shadow-lg flex items-center justify-center gap-2 active:scale-95">
          <PlusCircle size={20} /> Simpan & Preview Kwitansi
        </button>
      </form>
    </div>
  );
}

// --- Komponen: Pengaturan (Settings) ---
function SettingsPage({ opds, setOpds, recipients, setRecipients, logo, setLogo, prefix, setPrefix }) {
    const fileInputRef = useRef(null);

    const ListManager = ({ title, items, setItems, icon: Icon, placeholder }) => {
        const [value, setValue] = useState('');

        const add = (e) => {
            e.preventDefault();
            if (!value.trim() || items.includes(value.trim())) return;
            setItems([...items, value.trim()]);
            setValue('');
        };

        return (
            <div className="bg-white rounded-3xl shadow-sm border border-slate-200 p-6">
                <h3 className="text-sm font-bold text-slate-800 uppercase tracking-widest mb-4 flex items-center gap-2">
                    <Icon size={18} className="text-blue-500" /> {title}
                </h3>
                <form onSubmit={add} className="flex gap-2 mb-4">
                    <input type="text" placeholder={placeholder} className="flex-1 px-4 py-2.5 border-2 border-slate-50 rounded-xl outline-none focus:border-blue-100 transition-all text-sm" value={value} onChange={e => setValue(e.target.value)} />
                    <button className="bg-slate-900 text-white p-2.5 rounded-xl"><Plus size={20} /></button>
                </form>
                <div className="space-y-2 max-h-48 overflow-y-auto pr-1">
                    {items.map((item, idx) => (
                        <div key={idx} className="flex items-center justify-between p-3 bg-slate-50 rounded-xl group border border-transparent hover:border-blue-100 transition-all">
                            <span className="text-sm font-bold text-slate-700">{item}</span>
                            <button onClick={() => setItems(items.filter((_, i) => i !== idx))} className="text-red-400 opacity-0 group-hover:opacity-100 p-1 hover:bg-red-50 rounded-lg"><Trash2 size={16} /></button>
                        </div>
                    ))}
                </div>
            </div>
        );
    };

    return (
        <div className="max-w-4xl mx-auto space-y-8 pb-20">
            <h2 className="text-2xl font-black text-slate-800 tracking-tight flex items-center gap-3">
                <Settings size={28} className="text-blue-600" /> Konfigurasi Sistem
            </h2>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                <ListManager title="Daftar Unit OPD" items={opds} setItems={setOpds} icon={LayoutDashboard} placeholder="Tambah OPD..." />
                <ListManager title="Daftar Petugas Penerima" items={recipients} setItems={setRecipients} icon={Users} placeholder="Nama Bendahara..." />
            </div>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div className="bg-white rounded-3xl shadow-sm border border-slate-200 p-6 flex flex-col items-center justify-center text-center">
                    <h3 className="text-sm font-bold text-slate-800 uppercase tracking-widest mb-4 w-full text-left flex items-center gap-2">
                        <ImageIcon size={18} className="text-blue-500" /> Logo Instansi
                    </h3>
                    {logo ? (
                        <div className="relative mb-4">
                            <img src={logo} alt="Logo" className="h-28 object-contain rounded-xl p-2 bg-slate-50 border border-slate-100" />
                            <button onClick={() => setLogo(null)} className="absolute -top-2 -right-2 bg-red-500 text-white p-1 rounded-full"><X size={14}/></button>
                        </div>
                    ) : (
                        <div className="h-28 w-40 bg-slate-50 rounded-2xl border-2 border-dashed border-slate-200 flex items-center justify-center mb-4"><ImageIcon size={32} className="text-slate-300" /></div>
                    )}
                    <input type="file" ref={fileInputRef} className="hidden" onChange={(e) => {
                        const file = e.target.files[0];
                        if (file) {
                            const reader = new FileReader();
                            reader.onload = () => setLogo(reader.result);
                            reader.readAsDataURL(file);
                        }
                    }} />
                    <button onClick={() => fileInputRef.current.click()} className="bg-blue-50 text-blue-700 px-6 py-2.5 rounded-xl font-bold text-sm hover:bg-blue-100 transition-all">Ganti Logo</button>
                </div>

                <div className="bg-white rounded-3xl shadow-sm border border-slate-200 p-6">
                    <h3 className="text-sm font-bold text-slate-800 uppercase tracking-widest mb-4 flex items-center gap-2">
                        <Key size={18} className="text-blue-500" /> Format Nomor Bukti
                    </h3>
                    <div className="space-y-4">
                        <div>
                            <label className="text-[10px] font-black text-slate-400 uppercase mb-1 block">Prefix (Singkatan)</label>
                            <input 
                              type="text" 
                              className="w-full px-4 py-2.5 border-2 border-slate-50 rounded-xl outline-none focus:border-blue-100 transition-all font-black text-blue-700" 
                              value={prefix} 
                              onChange={e => setPrefix(e.target.value.toUpperCase())} 
                            />
                        </div>
                        <div className="p-4 bg-blue-50 rounded-2xl border border-blue-100">
                            <p className="text-[10px] text-blue-400 font-bold uppercase mb-1">Hasil Contoh Nomor:</p>
                            <p className="font-mono font-bold text-blue-800">{prefix}-20260102-001</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    );
}

// --- Komponen: Laporan ---
function HistoryView({ transactions, onDelete, onPrint }) {
    const [searchTerm, setSearchTerm] = useState('');

    const filtered = transactions.filter(t => 
        t.payerName.toLowerCase().includes(searchTerm.toLowerCase()) || 
        t.opd.toLowerCase().includes(searchTerm.toLowerCase())
    );

    return (
        <div className="space-y-6">
            <div className="flex flex-col md:flex-row justify-between items-center gap-4">
                <h2 className="text-2xl font-black text-slate-800 tracking-tight">Riwayat Iuran</h2>
                <div className="relative w-full md:w-80">
                    <Search className="absolute left-4 top-1/2 -translate-y-1/2 text-slate-300" size={18} />
                    <input type="text" placeholder="Cari Penyetor atau OPD..." className="w-full pl-12 pr-4 py-3 rounded-2xl border border-slate-200 outline-none focus:ring-2 focus:ring-blue-500 transition-all text-sm font-semibold" value={searchTerm} onChange={e => setSearchTerm(e.target.value)} />
                </div>
            </div>

            <div className="bg-white rounded-3xl shadow-sm border border-slate-200 overflow-hidden">
                <table className="w-full">
                    <thead className="bg-slate-50 border-b border-slate-100">
                        <tr>
                            <th className="p-5 text-left text-[10px] font-black uppercase text-slate-400 tracking-widest">No. Bukti</th>
                            <th className="p-5 text-left text-[10px] font-black uppercase text-slate-400 tracking-widest">Anggota / Penyetor</th>
                            <th className="p-5 text-left text-[10px] font-black uppercase text-slate-400 tracking-widest">Unit / Periode</th>
                            <th className="p-5 text-right text-[10px] font-black uppercase text-slate-400 tracking-widest">Nominal</th>
                            <th className="p-5 text-center text-[10px] font-black uppercase text-slate-400 tracking-widest">Aksi</th>
                        </tr>
                    </thead>
                    <tbody className="divide-y divide-slate-50 text-sm">
                        {filtered.map(t => (
                            <tr key={t.id} className="hover:bg-slate-50/50 transition-colors">
                                <td className="p-5 font-mono font-bold text-slate-500">{t.receiptNo}</td>
                                <td className="p-5 font-bold text-slate-800">{t.payerName}</td>
                                <td className="p-5">
                                    <div className="font-bold text-blue-600">{t.opd}</div>
                                    <div className="text-[10px] text-slate-400 font-bold uppercase">{t.periodMonth} {t.periodYear}</div>
                                </td>
                                <td className="p-5 text-right font-black text-slate-900">{formatRupiah(t.amount)}</td>
                                <td className="p-5">
                                    <div className="flex justify-center gap-2">
                                        <button onClick={() => onPrint(t)} className="p-2 text-blue-600 hover:bg-blue-100 rounded-xl transition-all"><Printer size={18} /></button>
                                        <button onClick={() => onDelete(t.id)} className="p-2 text-red-400 hover:bg-red-100 rounded-xl transition-all"><Trash2 size={18} /></button>
                                    </div>
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        </div>
    );
}

// --- Komponen: Kwitansi Modal ---
function ReceiptModal({ data, logo, onClose }) {
  const amountInWords = (terbilang(data.amount) + " Rupiah").trim();

  const handlePrint = () => {
    window.print();
  };

  return (
    <div className="fixed inset-0 z-50 flex items-center justify-center bg-slate-900/90 backdrop-blur-xl p-4 print:p-0 print:block overflow-y-auto">
      <div className="bg-white w-full max-w-4xl rounded-[40px] shadow-2xl overflow-hidden print:shadow-none print:w-full print:max-w-none print:rounded-none my-8">
        <div className="p-6 border-b flex justify-between items-center bg-slate-50/50 print:hidden">
            <h3 className="font-black text-slate-800 flex items-center gap-2 uppercase tracking-tight">
              <Printer size={20} className="text-blue-600" /> Pratinjau Kwitansi (Setengah A5)
            </h3>
            <button onClick={onClose} className="p-2 hover:bg-slate-200 rounded-full transition-all text-slate-500"><X size={24} /></button>
        </div>

        <div id="receipt-content" className="p-6 bg-white font-serif">
            <div className="border-[6px] border-double border-slate-900 p-6 relative bg-white min-h-[10cm] flex flex-col justify-between overflow-hidden">
                <div className="flex justify-between items-start mb-6 relative z-10">
                    <div className="flex gap-4 items-center">
                        {logo && <img src={logo} alt="Logo" className="h-16 object-contain" />}
                        <div>
                            <h1 className="text-3xl font-black italic tracking-tighter text-slate-900 leading-tight">KWITANSI</h1>
                            <p className="text-[10px] font-mono font-bold text-slate-500">NO: <span className="text-blue-800 font-black text-sm">{data.receiptNo}</span></p>
                        </div>
                    </div>
                    <div className="text-center">
                        <div className="bg-slate-900 text-white px-5 py-2 text-xl font-black font-sans shadow-[6px_6px_0px_0px_rgba(30,41,59,0.15)]">
                            {formatRupiah(data.amount)}
                        </div>
                    </div>
                </div>

                <div className="space-y-4 mb-6 relative z-10 text-sm">
                    <div className="flex items-end gap-3 border-b border-dotted border-slate-300 pb-1">
                        <span className="w-32 text-[9px] font-bold uppercase tracking-widest text-slate-400 flex-shrink-0">Telah Terima Dari :</span>
                        <span className="flex-1 font-black font-sans uppercase text-slate-900 truncate">{data.payerName}</span>
                    </div>
                    <div className="flex items-start gap-3 border-b border-dotted border-slate-300 pb-2">
                        <span className="w-32 text-[9px] font-bold uppercase tracking-widest text-slate-400 pt-2 flex-shrink-0">Uang Sejumlah :</span>
                        <div className="flex-1 bg-slate-50 p-3 rounded-xl italic font-bold border border-slate-100 text-slate-800 leading-relaxed">
                            ## {amountInWords} ##
                        </div>
                    </div>
                    <div className="flex items-end gap-3 border-b border-dotted border-slate-300 pb-1">
                        <span className="w-32 text-[9px] font-bold uppercase tracking-widest text-slate-400 flex-shrink-0">Untuk Iuran :</span>
                        <span className="flex-1 font-bold font-sans text-blue-800">{data.opd} â€” {data.periodMonth} {data.periodYear}</span>
                    </div>
                </div>

                <div className="flex justify-between items-end relative z-10 px-4">
                    <div className="text-center w-1/3">
                        <p className="text-[8px] font-bold uppercase tracking-widest text-slate-400 mb-12">Penyetor,</p>
                        <p className="text-sm font-black border-b-2 border-slate-900 inline-block px-4 pb-0.5 font-sans uppercase leading-none truncate max-w-full">{data.payerName}</p>
                    </div>
                    <div className="text-center w-1/3">
                        <p className="text-[10px] font-bold italic mb-2">{new Date(data.date).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' })}</p>
                        <p className="text-[8px] font-bold uppercase tracking-widest text-slate-400 mb-12">Bendahara,</p>
                        <p className="text-sm font-black border-b-2 border-slate-900 inline-block px-4 pb-0.5 font-sans uppercase leading-none truncate max-w-full">{data.recipient}</p>
                    </div>
                </div>

                <div className="absolute inset-0 flex items-center justify-center opacity-[0.02] pointer-events-none select-none z-0">
                    <h2 className="text-[120px] font-black -rotate-12">KORPRI</h2>
                </div>
            </div>
        </div>

        <div className="p-6 bg-slate-50 border-t flex flex-col sm:flex-row justify-center items-center gap-4 print:hidden">
            <button 
                onClick={onClose} 
                className="w-full sm:w-auto px-6 py-3 rounded-xl font-bold text-slate-600 hover:bg-slate-200 transition-all flex items-center justify-center gap-2 text-sm"
            >
                <X size={18} /> BATAL
            </button>
            <button 
                onClick={handlePrint} 
                className="w-full sm:w-auto bg-blue-600 text-white px-10 py-3 rounded-xl font-black flex items-center justify-center gap-2 hover:bg-blue-700 transition shadow-lg text-sm active:scale-95"
            >
                <Printer size={20} /> CETAK KWITANSI
            </button>
        </div>
      </div>

      <style>{`
        @media print {
            body * { visibility: hidden; }
            #receipt-content, #receipt-content * { visibility: visible; }
            
            #receipt-content {
                position: absolute;
                left: 0;
                top: 0;
                width: 210mm; 
                height: 74mm;
                padding: 0;
                margin: 0;
            }

            #receipt-content > div {
                border-width: 4px !important;
                padding: 4mm !important;
                min-height: 70mm !important;
                box-sizing: border-box;
            }

            @page { 
                size: 210mm 148mm landscape; 
                margin: 0; 
            }
        }
      `}</style>
    </div>
  );
}

function NavButton({ active, onClick, icon, label }) {
  return (
    <button onClick={onClick} className={`w-full flex items-center gap-4 px-6 py-4 rounded-2xl transition-all font-bold ${active ? 'bg-blue-600 text-white shadow-lg scale-[1.02]' : 'text-slate-400 hover:bg-slate-800 hover:text-white'}`}>
        {icon} <span className="tracking-tight">{label}</span>
    </button>
  );
}

function formatRupiah(number) {
  return new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(number);
}
